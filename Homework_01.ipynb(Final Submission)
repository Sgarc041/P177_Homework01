    "def Int2(f,delta_x):\n",
    "    \"\"\"the Riemann Sum\"\"\"\n",
    "    sample= delta_x / 2.0\n",
    "    total=0.0\n",
    "    while(sample<1):\n",
    "        total += f(sample)\n",
    "        sample += delta_x\n",
    "    return total\n",
    "        "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 17,
